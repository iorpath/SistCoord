<h1 align="center">Detalle de Oferta</h1>

<% if flash[:periodof] %>
<p>Periodo <%= flash[:periodof]%></p>
<p>Materia <%= flash[:materiaidf]%></p>
<% end %>


<table>
	<tr>
		<td><p style="font-weight: bold; background-color: gainsboro"> MaestrÃ¬a: </p><%= @mapadetalle["maestria"] %></td>
	</tr>
	<tr>
		<td><p style="font-weight: bold; background-color: gainsboro">Materia: </p><%= @mapadetalle["nombre"] %></td>
	</tr>
	<tr>
		<td><p style="font-weight: bold; background-color: gainsboro">Cantidad de 
			estudiantes de pregrado que planearon esta materia: </p>
			<%= if(@mapadetalle["cantidadPregrado"] != nil) then @mapadetalle["cantidadPregrado"].to_s else "0" end %></td>
	</tr>
	<tr>
		<td><p style="font-weight: bold; background-color: gainsboro">Cantidad de 
			estudiantes de maestria que planearon esta materia: </p> 
			<%= if(@mapadetalle["cantidadMaestria"] != nil) then @mapadetalle["cantidadMaestria"].to_s else "0" end %></td>
	</tr>
</table>
<table>		
<% @maestriasDetalle = Maestrium.all %>
<% @maestriasDetalle.each do |maestria| %>
	<% if(@mapadetalle[maestria.codigo] != nil) then %>
	<tr>
		<td>
			Maestria  <%=  maestria.nombre %> cantidad <%= @mapadetalle[maestria.codigo]%>
	    </td>
	</tr>
	<% end %>
<% end %>
</table>
<div align="center" style="width: 100%">
	<%= link_to 'Regresar', oferta_cursos_path,:class => 'btn btn-primary' %>
</div>
