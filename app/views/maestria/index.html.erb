  <tr>
  	<th>Codigo</th>
  	<th>Nombre</th>
    <th>Coordinador</th>
    <th>E-mail del Coordinador</th>
    <th>Acciones</th>
  </tr>

<% @maestria.each do |maestrium| %>
  <tr>
    <td><%= maestrium.codigo %></td>
    <td><%= maestrium.nombre %></td>
    <% if maestrium.user != nil then %>
    <td><%= maestrium.user.name %></td>
    <td><%= maestrium.user.email %></td>
    <% else %>
    <td></td>
    <td></td>
    <% end %>
    <td><%= link_to 'Ver informaciÃ³n', maestrium,:class => 'btn btn-info' %> </td> 
    <td><%= link_to 'Editar', edit_maestrium_path(maestrium),:class => 'btn btn-warning' %></td>
    <td><%= link_to 'Eliminar', maestrium, method: :delete, data: { confirm: 'Esta seguro de realizar la eliminacion?' },:class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

