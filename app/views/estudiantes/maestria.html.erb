					<th>Aprobado</th>
				</tr>

				<% @materias_primero.each do |materia| %>
				<tr>
					<td><%= materia.nombre %></td>
					<td><%= materia.codigo %></td>
					<%if @estudiante.is_materia_aprobada?(materia)%>
