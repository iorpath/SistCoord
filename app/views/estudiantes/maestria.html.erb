<div class="page-header">
	<h1>Informacion <%= @maestria.nombre%> </h1>
	<h1><small> Pensum Vigente </small></h1>
</div>
<div>
	<p>
		<strong> Codigo: </strong>
		<%= @maestria.codigo%>
	</p>

	<p>
		<strong> Estado: </strong>
		<%= @pensum.estado%>
	</p>

	<p>
		<strong> Fecha de Creacion: </strong>
