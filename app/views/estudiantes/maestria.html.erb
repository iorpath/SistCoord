<div class="page-header">
	<h1>Informacion <%= @maestria.nombre%> </h1>
	<h1><small> Pensum <% @pensum.nombre%> </small></h1>
</div>

<div>
	<p>
		<strong> Codigo: </strong>
		<%= @maestria.codigo%>
	</p>

	<p>
		<strong> Estado: </strong>
		<% if @pensum.estado%>
		Finalizado
		<%else%>
		Pendiente
		<%end%>
	</p>
	<p>
		<strong> Fecha de Creacion: </strong>
		<%= @pensum.fechacreacion%>
	</p>
</div>

<div style="padding-top: 30px">
	<h2>Materias</h2>

	<div class = "row-fluid">
		<div class = "span2">
			<table class = "table">
				<tr>
					<th>Lectura</th>
				</tr>
				<tr class="success">
					<td>Aprobada</td>
				</tr>
				<tr class="info">
					<td>Inscrita</td>
				</tr>
				<tr class="warning" style= "background-color: #FFFF99">
					<td>Planeada</td>
				</tr>
				<tr class="error">
					<td>Pendiente</td>
				</tr>
			</table>
		</div>
	</div>
	<h2><small> Plan de estudios </small></h2>
	<div>
		<% @materias.each do |periodo, materias_periodos|%>
		<div class ="row-fluid">
			<h4> <%= periodo%> </h4>
			<% materias_periodos.each do |area_materias|%>
			<% mats= area_materias[1]%>
			<div class = "span2" style="width: 20%">
				<table class="table table-bordered">
					<tr>
						<th><%= area_materias[0]%></th>
					</tr>
					<%if not mats.empty?%>
					<%mats.each do |m|%>
					<% estado = @estudiante.estado_materia(m) %>
					<% if estado == "vista"%>
					<tr class="success">
						<%elsif estado== "inscrita"%>
					<tr class="warning" style= "background-color: #FFFF99">
						<%elsif estado== "planeada"%>
					<tr class="info">
						<%else%>
					<tr class="error">
						<%end%>
						<td><%= link_to m.nombre, new_estudiante_materia_path(@estudiante,m)%></td> 
					</tr>
					<%end%>
					<%else%>
					<tr style= "background-color: #FFFFF0">
						<td >disponible</td>
					</tr>
					<%end%>

				</table>
			</div>
			<%end%>
		</div>
		<% end %>

	</div>
</div>
