<% @pensums.each do |pensum| %>
  <tr>
    <td><%= pensum.nombre %></td>
    <td><%= pensum.fecha_creacion %></td>
    <td><%= pensum.maestria %></td>
    <td><%= link_to 'Show', pensum %></td>
    <td><%= link_to 'Edit', edit_pensum_path(pensum) %></td>
    <td><%= link_to 'Destroy', pensum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

