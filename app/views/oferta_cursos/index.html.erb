
<h1 align="center">Oferta de cursos</h1>
<% if flash[:notice] %>
<p><%= flash[:notice]%></p>
<% end %>

<% if flash[:estado] %>
<p>estados <%= flash[:estado]%></p>
<% end %>

<%= form_tag({}, {:method => :get}) do %>
<table style="border-width: 2px; border-radius: 3; border-color: black; width: 100%">
  <tr>
  	<td style="width: 20%" align="right">Periodo</td>
  	<td style="width: 20%" align="left"><%= select_tag(:persel, options_for_select(@periodos.collect{|x| [x.nombre, x.id]})) %></td>
  	<td style="width: 20%" align="right">Top</td>
  	<td style="width: 20%" align="left"> <%= text_field_tag :top, nil, :maxlength => 2, :style => "width:40px"%></td>
  	<td style="width: 20%" align="center"><%= button_to 'Actualizar', oferta_cursos_path,:class => 'btn btn-primary' %></td>
  </tr>
 </table>
<% end %>
 <hr />
 
<% @mapamaterias.each do |idmaestrium, materias| %>
<table>
<tr>
	<td align="center" style="width: 200px" colspan="2">
		<% @maestrium = Maestrium.find(idmaestrium) %>
		<%= @maestrium.codigo %>
	</td>	
</tr>
<% materias.each do |materium| %>
<tr>
	<td style="background-color: <%= if(materium.estop == true) then "black" end %>;"><%= materium.codigo %></td>
	<td><input type="checkbox" /></td>
</tr>
<% end %>
</table>
<% end %>

 <hr />
